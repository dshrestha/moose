<div id="moose-container" class="container">
    <div class="inner-container">
        <div class="row name-logo">
            <div class="col-sm-5">DEEWENDRA</div>
            <div class="col-sm-3">G.</div>
            <div class="col-sm-4">SHRESTHA</div>
        </div>
      {{#sticky-container}}
        {{navigation-bar}}
      {{/sticky-container}}
        <div class="row">{{outlet}}</div>
    </div>
</div>

{{#if loading}}
  {{#bootstrap-modal option-backdrop="static" option-keyboard=false position="center"}}
    {{#bootstrap-modal-body}}
        <div class="progress" style="margin-bottom: 0px;">
            <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width:100%">Loading...</div>
        </div>
    {{/bootstrap-modal-body}}
  {{/bootstrap-modal}}
{{/if}}