<div class="col-md-4">
    <ul class="nav nav-pills nav-stacked p-t-3">
      {{#each experiences as |experience|}}
          <li role="presentation" class="{{if (check-eq experience selectedExperience) "active"}}"><a href="#" {{action "selectExperience" experience}}>{{experience.companyName}}</a></li>
      {{/each}}
    </ul>
</div>
<div class="col-md-8">
    {{#nav-tabs tabs=tabs onTabClick=(action "onTabClick")}}
        {{#if showRole}}
            {{experience/show-roles experience=selectedExperience}}
        {{else}}
            {{experience/show-projects experience=selectedExperience}}
        {{/if}}
    {{/nav-tabs}}
</div>